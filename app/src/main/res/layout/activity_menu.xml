<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#234581"
    tools:context=".Menu">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="8.7"
                android:gravity="center"
                android:text=""
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/menuini" />

            <Button
                android:id="@+id/btnMarkbus"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="28dp"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Mark Bus"
                android:textAllCaps="false"
                android:textColor="#0E0E0E"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMonitoriar"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="buttonClick"
                android:text="Monitorear "
                android:textAllCaps="false"
                android:textColor="#0E0E0E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto"
                android:text="Â¿Te gusta Mark Bus?  Siguenos en: "
                android:textColor="#FFFF"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="97dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="31dp"
                    android:layout_height="29dp"

                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="32dp"
                    app:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="31dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="32dp"
                    app:srcCompat="@drawable/youtube" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="39dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="32dp"
                    app:srcCompat="@drawable/insta" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="39dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="32dp"
                    app:srcCompat="@drawable/twitter" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>