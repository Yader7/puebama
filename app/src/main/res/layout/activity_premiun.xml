<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Premiun">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="388dp"
                android:layout_height="233dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/pago0" />

            <EditText
                android:id="@+id/textView14"
                android:layout_width="350dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="#E4DFDF"
                android:hint="Correo electronico" />

            <EditText
                android:id="@+id/textView5"
                android:layout_width="350dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="#E4DFDF"
                android:hint="Número de tarjeta" />

            <EditText
                android:id="@+id/textView8"
                android:layout_width="350dp"
                android:layout_height="31dp"
                android:layout_marginTop="8dp"
                android:background="#E4DFDF"
                android:hint="Código de seguridad" />

            <EditText
                android:id="@+id/textView9"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="#E4DFDF"
                android:hint="Nombre del dueño de la tarjeta" />

            <EditText
                android:id="@+id/textView7"
                android:layout_width="350dp"
                android:layout_height="29dp"
                android:layout_marginTop="8dp"
                android:background="#E4DFDF"
                android:hint="Fecha de expiración" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:text="──────────────────────────────────" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="316dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center"
                    android:text="Al registrase, aceptas nuestras condiciones" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="──────────────────────────────────" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="168dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="-0dp"
                    android:text="Guardar esta tarjeta" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:text="Si" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="56dp"
                    android:text="No" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btnGuard"
                    android:layout_width="135dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="30dp"

                    android:backgroundTint="#A09F9F"
                    android:text="Guardar"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/cancelar"
                    android:layout_width="135dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#707070"
                    android:text="Cancelar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>